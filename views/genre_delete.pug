extends layout

block content

  h1 Delete Genre: #{genre.name}
  
  if genre_dishs.length
  
    p #[strong Delete the following dishs before attempting to delete this genre.]
  
    div(style='margin-left:20px;margin-top:20px')

      h4 dishs
    
      dl
      each dish in genre_dishs
        dt 
          a(href=dish.url) #{dish.title}
        dd #{dish.summary}

  else
    p Do you really want to delete this Genre?
    
    form(method='POST' action='')
      div.form-group
        input#id.form-control(type='hidden',name='id', required='true', value=genre._id )

      button.btn.btn-primary(type='submit') Delete