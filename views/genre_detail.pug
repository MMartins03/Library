extends layout

block content

  h1 Genre: #{genre.name}
  
  div(style='margin-left:20px;margin-top:20px')

    h4 dishs
    
    dl
    each dish in genre_dishs
      dt 
        a(href=dish.url) #{dish.title}
      dd #{dish.summary}

    else
      p This genre has no dishs.
      
  hr
  p
    a(href=genre.url+'/delete') Delete genre
  p
    a(href=genre.url+'/update') Update genre